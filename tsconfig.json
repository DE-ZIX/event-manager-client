{
	"extends": "@quasar/app/tsconfig-preset",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["webpack-env", "jest"],
		"paths": {
			"@/*": ["src/*"],
			"@services/*": ["src/services/*"],
			"@models/*": ["src/models/*"],
			"~models/*": ["src/models/*"],
			"@views/*": ["src/views/*"],
			"@styles/*": ["src/styles/*"],
			"@assets/*": ["src/assets/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": ["node_modules"]
}
